<div class="container">
  <div class="row mt-4">
    <div class="col-md-4 col-sm-4 rounded bg-info p-2">
      <h5> <%= "#{@user.first_name} #{@user.last_name}" %> </h5>
      <h6> <%= "#{@user.motto}" %> </h6>
    </div>
    <div class="col-md-6 col-sm-6 rounded bg-info p-2" style="margin-left:2%">
      <h5> Experience </h5>
    </div>
    <div class="col-md-1 col-sm-1">
      <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#exampleModal"> <i class="fas fa-edit"></i> </button>
    </div>
  </div>
  
  <!-- Button trigger modal -->

  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          ...
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary">Save changes</button>
        </div>
      </div>
    </div>
  </div>
</div>